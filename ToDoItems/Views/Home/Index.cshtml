@model List<ToDoItem>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <a href="/home/newitem" class="btn btn-success">New Item</a>
        <br />
        <table class="table table-hover table-striped table-bordered">
            <tr>
                <th>Title</th>
                <th>Category Name</th>
                <th>Due Date</th>
                <th>Mark as Completed</th>
            </tr>

            @foreach (ToDoItem item in Model)
            {
                <tr class="@(item.IsOverdue ? "table-danger": "")">
                    <td>@item.Title</td>
                    <td>@item.CategoryName</td>
                    <td>@item.DueDate.ToShortDateString()</td>
                    <td>
                        <form method="post" action="/home/markascompleted">
                            <input name="id" value="@item.Id" type="hidden" />
                            <button class="btn btn-primary">Mark as Completed</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>